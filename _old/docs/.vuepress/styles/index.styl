.theme-default-content:not(.custom) {
    max-width: 1000px;
}
img {
    background: #3eaf7c;
    border: 10px solid #3eaf7c;
    min-width: calc(100% - 20px);
    text-align: center;
    transform: translateX(-10px);
}
.sidebar-group.is-sub-group > .sidebar-heading {
    font-size: 1em !important;
}

.custom-block{
    &.tip, &.warning, &.danger{
        padding: 0.7rem 1.5rem;
    }
    .custom-block-title{
        margin-bottom: .7rem;
    }
}

.v-application {
    padding: 2rem;
    border: 10px solid #3eaf7c;
    table {
        border-collapse: unset;
        margin: unset;
        display: table;
        overflow-x: unset;
    }
    td, th {
        border: unset;
        padding: 0;
    }
    tr:nth-child(2n) {
        background-color: unset;
    }
    h2 {
        font-size: unset;
        padding-bottom: unset;
        border-bottom: unset;
    }
    a:hover {
        text-decoration: unset !important;
    }
    .v-application--wrap {
        min-height: unset;
    }
    @media (max-width: 600px) {
        padding: 0.7rem;
        border-left: 0;
        border-right: 0;
    }
}

.demo-and-code-wrapper .code-control {
    z-index: 2 !important;
}
